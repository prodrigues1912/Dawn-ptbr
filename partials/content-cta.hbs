{{{html}}}

<section class="single-cta">
    {{#has visibility="paid"}}
        <h2 class="single-cta-title">Esta postagem é exclusiva para assinantes pagantes</h2>
    {{/has}}
    {{#has visibility="members"}}
        <h2 class="single-cta-title">Esta postagem é exclusiva para assinantes</h2>
    {{/has}}
    {{#has visibility="filter"}}
        <h2 class="single-cta-title">Esta postagem é exclusiva para assinantes do nível {{tiers}}</h2>
    {{/has}}
    {{#if @member}}
        <button class="button single-cta-button" data-portal="account/plans">Atualize agora</button>
    {{else}}
        <button class="button single-cta-button" data-portal="signup">Increva-se agora</button>
        <br>
        <button class="button-text single-cta-footer" data-portal="signin">Já tem uma conta? Faça login</button>
    {{/if}}
</section>
